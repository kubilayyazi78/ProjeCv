@model ProjeCv.Models.Class.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                AD
            </th>
            <th>
                SOYAD
            </th>
            <th>
                ADRES
            </th>
            <th>
                TELEFON
            </th>
            <th>
                MAIL
            </th>
            @*  <th>
                    HAKKIMDA
                </th>
            </tr>*@
            <th>GÜNCELLE</th>
        </thead>
        <tbody>
            @foreach (var item in Model.Deger1)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Mail</td>
                @* <td>@item.About</td>*@
                <td><a href="/Hakkimda/HakkimdaGetir/@item.Id" class="btn btn-warning">Güncelle</a></td>
        </tr>
        }

    </tbody>
</table>