@model ProjeCv.Models.Class.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                BAŞLIK
            </th>
            <th>
                ALT BAŞLIK
            </th>
            <th>
                TARİH
            </th>
            <th>
                DETAYLAR
            </th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
    </thead>
    <tbody>
        @foreach (var item in Model.Deger2)
        {
        <tr>
            <th>@item.Id</th>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Date</td>
            <td>@item.Details</td>
            <td><a href="/Deneyimler/DeneyimSil/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
        </tr>
        }

    </tbody>
</table>

<a href="/Deneyimler/YeniDeneyim" class="btn btn-info" >Yeni Deneyim Ekle</a>

