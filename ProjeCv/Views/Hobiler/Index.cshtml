@model ProjeCv.Models.Class.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                HOBİLER
            </th>
            <th>SİL</th>
            <td>GÜNCELLE</td>
    </thead>
    <tbody>
        @foreach (var item in Model.Deger5)
        {
            <tr>
                <th>@item.Id</th>
                <td>@item.Interest</td>
                <td>@Html.ActionLink("Hobi Sil", "HobiSil", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm ('Silmek İstiyor Musun?')" })</td>
                <td><a href="/Hobiler/HobiGuncelle/@item.Id" class="btn btn-success">Güncelle</a></td>
            </tr>
        }

    </tbody>
</table>

<a href="/Hobiler/YeniHobi" class="btn btn-info">Yeni Hobi Ekle</a>