@using ProjeCv.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TblSkills>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                YETENEKLER
            </th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>YENİ SİL</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <td>@item.Skill</td>
                <td><a href="/Yetenekler/YetenekSil/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Yetenekler/YetenekGetir/@item.Id" class="btn btn-success">Güncelle</a></td>
                <td>@Html.ActionLink("Sil Butonu", "YetenekSil", new { id = item.Id }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek İstiyor Musunuz ?')" })</td>
            </tr>
        }

    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Yetenekler/YeniYetenek" class="btn btn-info">Yeni Yetenek Ekle</a>