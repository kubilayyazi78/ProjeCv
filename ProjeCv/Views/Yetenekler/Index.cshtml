@model ProjeCv.Models.Class.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                YETENEKLER
            </th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>YENİ SİL</th>
    </thead>
    <tbody>
        @foreach (var item in Model.Deger4)
        {
        <tr>
            <th>@item.Id</th>
            <td>@item.Skill</td>
            <td><a href="/Yetenekler/YetenekSil/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Yetenekler/YetenekGuncelle/@item.Id" class="btn btn-success">Güncelle</a></td>
            <td>@Html.ActionLink("Sil Butonu","YetenekSil",new { id=item.Id},new {@class="btn btn-warning" ,onclick="return confirm('Silmek İstiyor Musunuz ?')"})</td>
        </tr>
        }

    </tbody>
</table>

<a href="/Yetenekler/YeniYetenek" class="btn btn-info">Yeni Yetenek Ekle</a>